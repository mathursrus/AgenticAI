{
    "$schema": "https://developer.microsoft.com/json-schemas/copilot/declarative-agent/v1.2/schema.json",
    "version": "v1.2",
    "name": "Spec Assistant",
    "description": "An AI agent to help you write, review, update specs",
    "instructions": "$[file('instruction.txt')]",
    "actions": [
        {
            "id": "spec_plugin",
            "file": "spec_plugin.json"
        }
    ],
    "conversation_starters": [
        {
            "text": "Review this spec"
        },
        {
            "text": "Write a spec based on the attached meeting artifacts"
        },
        {
            "text": "Update this spec based on the following feedback"
        }
    ],
    "capabilities": [
    {
      "name": "GraphicArt"
    },
    {
      "name": "CodeInterpreter"
    }
  ]
}